{
  "manifest_version": 3,
  "name": "Following Cleaner for X",
  "version": "1.0.0",
  "description": "Tinder-style UI to clean up your X/Twitter following list",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*/following", "https://twitter.com/*/following"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
