{
  "manifest_version": 3,
  "name": "Following Cleaner for X",
  "version": "1.0.0",
  "description": "Tinder-style UI to clean up your X/Twitter following list",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "following-cleaner@example.com"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
